<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/home_page3"
    android:orientation="vertical"
    tools:context=".activities.HomeActivity">

    <include layout="@layout/mytoolbar" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/rect_corners"
        android:orientation="vertical"
        android:padding="30dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:id="@+id/tvFileNoti"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:padding="@dimen/_1sdp"
                android:gravity="center"
                android:visibility="gone"
                android:background="@drawable/circle_back"
                android:textSize="@dimen/_8sdp"
                android:layout_gravity="right"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/filesBtn"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/et_mobile"
                android:layout_marginTop="@dimen/_18sdp"
                android:background="@drawable/rect_tv_white"
                android:gravity="center"
                android:padding="10dp"
                android:text="File Disposal System"
                android:textColor="#ffffff"
                android:textSize="19sp" />

        </FrameLayout>


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp">

        <TextView
            android:id="@+id/tvLetterNoti"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:gravity="center"
            android:visibility="gone"
            android:padding="@dimen/_1sdp"
            android:background="@drawable/circle_back"
            android:textSize="@dimen/_8sdp"
            android:layout_gravity="right"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/letterBtn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="@dimen/_18sdp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/rect_tv_white"
            android:gravity="center"
            android:padding="10dp"
            android:text="Letter Disposal System"
            android:textColor="#ffffff"
            android:textSize="19sp" />

        </FrameLayout>

    </LinearLayout>

</LinearLayout>
