<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">

    <include layout="@layout/content_layout" />

    <FrameLayout
        android:id="@+id/frame"
        android:layout_width="270dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/colorWhite"
        android:fitsSystemWindows="true"
        android:visibility="visible">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/version"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/margin_5"
                android:textAlignment="textEnd"
                android:textColor="@color/colorBlack"
                android:layout_alignParentBottom="true"
                android:textSize="15dp" />


        <ScrollView
            android:id="@+id/scrolView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/version"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="start"
                android:orientation="vertical">

                <include
                    android:id="@+id/nev_header"
                    layout="@layout/nav_header" />

                <!--Menu layout-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="start">

                    <LinearLayout
                        android:id="@+id/relative1"
                        android:layout_width="300dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_gravity="start">

                        <!--Add Shop-->
                        <com.balysv.materialripple.MaterialRippleLayout
                            android:id="@+id/lyt_AddShop"
                            style="@style/RippleStyleBlack"
                            android:layout_width="match_parent"
                            android:layout_height="?attr/actionBarSize"
                            android:background="@color/colorWhite"
                            android:focusable="true">

                            <LinearLayout
                                android:id="@+id/ll_AddShop"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal">

                                    <ImageButton
                                        android:layout_width="25dp"
                                        android:layout_height="25dp"
                                        android:layout_margin="8dp"
                                        android:background="?attr/selectableItemBackgroundBorderless"
                                        app:srcCompat="@drawable/ic_add_shop"
                                        tools:ignore="VectorDrawableCompat" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="5dp"
                                        android:text="Add Shop"
                                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                                        android:textColor="@color/grey_80" />

                                </LinearLayout>

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1px"
                                    android:background="@color/grey_10" />

                            </LinearLayout>

                        </com.balysv.materialripple.MaterialRippleLayout>

                        <!--Book Order-->
                        <com.balysv.materialripple.MaterialRippleLayout
                            android:id="@+id/lyt_BookOrder"
                            style="@style/RippleStyleBlack"
                            android:layout_width="match_parent"
                            android:layout_height="?attr/actionBarSize"

                            android:background="@color/colorWhite"
                            android:focusable="true">

                            <LinearLayout
                                android:id="@+id/ll_BookOrder"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1px"
                                    android:background="@color/grey_10" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal">

                                    <ImageButton
                                        android:layout_width="25dp"
                                        android:layout_height="25dp"
                                        android:layout_margin="8dp"
                                        android:background="?attr/selectableItemBackgroundBorderless"
                                        app:srcCompat="@drawable/ic_user" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="5dp"
                                        android:text="Book Order"
                                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                                        android:textColor="@color/grey_80" />

                                </LinearLayout>

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1px"
                                    android:background="@color/grey_10" />

                            </LinearLayout>

                        </com.balysv.materialripple.MaterialRippleLayout>

                        <!--History-->
                        <com.balysv.materialripple.MaterialRippleLayout
                            android:id="@+id/lyt_History"
                            style="@style/RippleStyleBlack"
                            android:layout_width="match_parent"
                            android:layout_height="?attr/actionBarSize"

                            android:background="@color/colorWhite"
                            android:focusable="true">

                            <LinearLayout
                                android:id="@+id/ll_History"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1px"
                                    android:background="@color/grey_10" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal">

                                    <ImageButton
                                        android:layout_width="25dp"
                                        android:layout_height="25dp"
                                        android:layout_margin="8dp"
                                        android:background="?attr/selectableItemBackgroundBorderless"
                                        app:srcCompat="@drawable/ic_user" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="5dp"
                                        android:text="History"
                                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                                        android:textColor="@color/grey_80" />

                                </LinearLayout>

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1px"
                                    android:background="@color/grey_10" />

                            </LinearLayout>

                        </com.balysv.materialripple.MaterialRippleLayout>

                        <!--Change Password-->
                        <com.balysv.materialripple.MaterialRippleLayout
                            android:id="@+id/lyt_ChangePassword"
                            style="@style/RippleStyleBlack"
                            android:layout_width="match_parent"
                            android:layout_height="?attr/actionBarSize"

                            android:background="@color/colorWhite"
                            android:focusable="true">

                            <LinearLayout
                                android:id="@+id/ll_ChangePassword"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1px"
                                    android:background="@color/grey_10" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal">

                                    <ImageButton
                                        android:layout_width="25dp"
                                        android:layout_height="25dp"
                                        android:layout_margin="8dp"
                                        android:background="?attr/selectableItemBackgroundBorderless"
                                        app:srcCompat="@drawable/ic_user" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="5dp"
                                        android:text="Change Password"
                                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                                        android:textColor="@color/grey_80" />

                                </LinearLayout>

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1px"
                                    android:background="@color/grey_10" />

                            </LinearLayout>

                        </com.balysv.materialripple.MaterialRippleLayout>

                        <!--Contact Us-->
                        <com.balysv.materialripple.MaterialRippleLayout
                            android:id="@+id/lyt_ContactUs"
                            style="@style/RippleStyleBlack"
                            android:layout_width="match_parent"
                            android:layout_height="?attr/actionBarSize"

                            android:background="@color/colorWhite"
                            android:focusable="true">

                            <LinearLayout
                                android:id="@+id/ll_ContactUs"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1px"
                                    android:background="@color/grey_10" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal">

                                    <ImageButton
                                        android:layout_width="25dp"
                                        android:layout_height="25dp"
                                        android:layout_margin="8dp"
                                        android:background="?attr/selectableItemBackgroundBorderless"
                                        app:srcCompat="@drawable/ic_user" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="5dp"
                                        android:text="Contact Us"
                                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                                        android:textColor="@color/grey_80" />

                                </LinearLayout>

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1px"
                                    android:background="@color/grey_10" />

                            </LinearLayout>

                        </com.balysv.materialripple.MaterialRippleLayout>

                        <!--About Us-->
                        <com.balysv.materialripple.MaterialRippleLayout
                            android:id="@+id/lyt_About"
                            style="@style/RippleStyleBlack"
                            android:layout_width="match_parent"
                            android:layout_height="?attr/actionBarSize"

                            android:background="@color/colorWhite"
                            android:focusable="true">

                            <LinearLayout
                                android:id="@+id/ll_About"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1px"
                                    android:background="@color/grey_10" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal">

                                    <ImageButton
                                        android:layout_width="25dp"
                                        android:layout_height="25dp"
                                        android:layout_margin="8dp"
                                        android:background="?attr/selectableItemBackgroundBorderless"
                                        app:srcCompat="@drawable/ic_user" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="5dp"
                                        android:text="About Us"
                                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                                        android:textColor="@color/grey_80" />

                                </LinearLayout>

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1px"
                                    android:background="@color/grey_10" />

                            </LinearLayout>

                        </com.balysv.materialripple.MaterialRippleLayout>

                        <!--Rate us-->
                        <com.balysv.materialripple.MaterialRippleLayout
                            android:id="@+id/lyt_Rate"
                            style="@style/RippleStyleBlack"
                            android:layout_width="match_parent"
                            android:layout_height="?attr/actionBarSize"

                            android:background="@color/colorWhite"
                            android:focusable="true">

                            <LinearLayout
                                android:id="@+id/ll_Rate"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1px"
                                    android:background="@color/grey_10" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal">

                                    <ImageButton
                                        android:layout_width="25dp"
                                        android:layout_height="25dp"
                                        android:layout_margin="8dp"
                                        android:background="?attr/selectableItemBackgroundBorderless"
                                        app:srcCompat="@drawable/ic_user" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="5dp"
                                        android:text="Rate us"
                                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                                        android:textColor="@color/grey_80" />

                                </LinearLayout>

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1px"
                                    android:background="@color/grey_10" />

                            </LinearLayout>

                        </com.balysv.materialripple.MaterialRippleLayout>


                        <!--Logout-->
                        <com.balysv.materialripple.MaterialRippleLayout
                            android:id="@+id/lyt_Logout"
                            style="@style/RippleStyleBlack"
                            android:layout_width="match_parent"
                            android:layout_height="?attr/actionBarSize"

                            android:background="@color/colorWhite"
                            android:focusable="true">

                            <LinearLayout
                                android:id="@+id/ll_Logout"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1px"
                                    android:background="@color/grey_10" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal">

                                    <ImageButton
                                        android:layout_width="25dp"
                                        android:layout_height="25dp"
                                        android:layout_margin="8dp"
                                        android:background="?attr/selectableItemBackgroundBorderless"
                                        app:srcCompat="@drawable/ic_user" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="5dp"
                                        android:text="Logout"
                                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                                        android:textColor="@color/grey_80" />

                                </LinearLayout>

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1px"
                                    android:background="@color/grey_10" />

                            </LinearLayout>

                        </com.balysv.materialripple.MaterialRippleLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

        </RelativeLayout>

    </FrameLayout>
</androidx.drawerlayout.widget.DrawerLayout>
