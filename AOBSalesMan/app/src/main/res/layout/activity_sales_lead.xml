<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.activities.SplashActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">


            <RelativeLayout
                android:layout_width="match_parent"
                android:background="@color/colorPrimaryLight"
                android:padding="13dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <ImageView
                    android:layout_width="40dp"
                    android:id="@+id/back_image"
                    android:padding="8dp"
                    android:background="?attr/selectableItemBackground"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/outline_keyboard_backspace_white_48"
                    />


                <TextView
                    android:id="@+id/main_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:padding="8dp"
                    android:text="Register Sale"
                    android:textColor="@color/colorWhite"
                    android:textSize="18dp" />



            </RelativeLayout>


            <androidx.cardview.widget.CardView
                android:id="@+id/card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible"
                android:layout_below="@id/image"
                android:background="@android:color/transparent"
                android:layout_alignParentBottom="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_mlarge">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:padding="8dp"
                            android:id="@+id/head_city"
                            android:textColor="@color/colorPrimary"
                            android:textSize="18dp"
                            android:text="Customer Details"/>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Company's Name *"
                                android:textAlignment="center"
                                android:textSize="14sp"
                                android:textColor="@color/colorlabel" />



                            <androidx.appcompat.widget.AppCompatEditText
                                android:layout_width="match_parent"
                                android:padding="11dp"
                                android:maxLength="100"
                                android:maxLines="1"
                                android:textSize="14sp"
                                android:id="@+id/company_name"
                                android:inputType="textCapSentences"
                                android:hint="Enter Company's Name"
                                android:layout_marginTop="@dimen/spacing_middle"
                                android:background="@drawable/et_background"
                                android:layout_height="wrap_content" />

                        </LinearLayout>
                        <View
                            android:layout_width="0dp"
                            android:layout_height="@dimen/spacing_small" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Contact Person's Name *"
                                android:textAlignment="center"
                                android:textSize="14sp"
                                android:textColor="@color/colorlabel" />



                            <androidx.appcompat.widget.AppCompatEditText
                                android:layout_width="match_parent"
                                android:padding="11dp"
                                android:maxLength="100"
                                android:maxLines="1"
                                android:textSize="14sp"
                                android:id="@+id/contact_person"
                                android:inputType="textCapSentences"
                                android:hint="Enter Contact Person's Name"
                                android:layout_marginTop="@dimen/spacing_middle"
                                android:background="@drawable/et_background"
                                android:layout_height="wrap_content" />

                        </LinearLayout>
                        <View
                            android:layout_width="0dp"
                            android:layout_height="@dimen/spacing_small" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Designation *"
                                android:textAlignment="center"
                                android:textSize="14sp"
                                android:textColor="@color/colorlabel" />



                            <androidx.appcompat.widget.AppCompatEditText
                                android:layout_width="match_parent"
                                android:padding="11dp"
                                android:maxLength="100"
                                android:maxLines="1"
                                android:id="@+id/designation"
                                android:inputType="textCapSentences"
                                android:textSize="14sp"
                                android:hint="Enter Designation"
                                android:layout_marginTop="@dimen/spacing_middle"
                                android:background="@drawable/et_background"
                                android:layout_height="wrap_content" />

                        </LinearLayout>

                        <View
                            android:layout_width="0dp"
                            android:layout_height="@dimen/spacing_small" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Contact Number *"
                                android:textAlignment="center"
                                android:textSize="14sp"
                                android:textColor="@color/colorlabel" />



                            <androidx.appcompat.widget.AppCompatEditText
                                android:layout_width="match_parent"
                                android:padding="11dp"
                                android:maxLength="10"
                                android:maxLines="1"
                                android:textSize="14sp"
                                android:hint="Enter Contact Number"
                                android:id="@+id/contact_number"
                                android:inputType="number"
                                android:layout_marginTop="@dimen/spacing_middle"
                                android:background="@drawable/et_background"
                                android:layout_height="wrap_content" />

                        </LinearLayout>


                        <View
                            android:layout_width="0dp"
                            android:layout_height="@dimen/spacing_small" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Email ID *"
                                android:textAlignment="center"
                                android:textSize="14sp"
                                android:textColor="@color/colorlabel" />



                            <androidx.appcompat.widget.AppCompatEditText
                                android:layout_width="match_parent"
                                android:padding="11dp"
                                android:maxLength="100"
                                android:singleLine="true"
                                android:maxLines="1"
                                android:textSize="14sp"
                                android:id="@+id/email_id"
                                android:hint="Enter Email ID"
                                android:layout_marginTop="@dimen/spacing_middle"
                                android:background="@drawable/et_background"
                                android:layout_height="wrap_content" />

                        </LinearLayout>

                        <View
                            android:layout_width="0dp"
                            android:layout_height="@dimen/spacing_small" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Address *"
                                android:textAlignment="center"
                                android:textSize="14sp"
                                android:textColor="@color/colorlabel" />


                            <androidx.appcompat.widget.AppCompatEditText
                                android:layout_width="match_parent"
                                android:padding="11dp"
                                android:maxLength="100"
                                android:maxLines="1"
                                android:textSize="14sp"
                                android:id="@+id/street_address"
                                android:inputType="textCapSentences"
                                android:hint="Enter Street Address"
                                android:layout_marginTop="@dimen/spacing_middle"
                                android:background="@drawable/et_background"
                                android:layout_height="wrap_content" />


                            <androidx.appcompat.widget.AppCompatEditText
                                android:layout_width="match_parent"
                                android:padding="11dp"
                                android:maxLength="100"
                                android:maxLines="1"
                                android:textSize="14sp"
                                android:id="@+id/city"
                                android:inputType="textCapSentences"
                                android:hint="Enter City"
                                android:layout_marginTop="@dimen/spacing_middle"
                                android:background="@drawable/et_background"
                                android:layout_height="wrap_content" />


                            <androidx.appcompat.widget.AppCompatEditText
                                android:layout_width="match_parent"
                                android:padding="11dp"
                                android:maxLength="100"
                                android:maxLines="1"
                                android:textSize="14sp"
                                android:id="@+id/state"
                                android:inputType="textCapSentences"
                                android:hint="Enter State"
                                android:layout_marginTop="@dimen/spacing_middle"
                                android:background="@drawable/et_background"
                                android:layout_height="wrap_content" />


                            <androidx.appcompat.widget.AppCompatEditText
                                android:layout_width="match_parent"
                                android:padding="11dp"
                                android:maxLength="6"
                                android:maxLines="1"
                                android:textSize="14sp"
                                android:inputType="number"
                                android:id="@+id/pin_code"
                                android:hint="Enter PIN Code"
                                android:layout_marginTop="@dimen/spacing_middle"
                                android:background="@drawable/et_background"
                                android:layout_height="wrap_content" />

                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:padding="8dp"
                            android:textColor="@color/colorPrimary"
                            android:textSize="18dp"
                            android:text="Order Details"/>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Order Details *"
                                android:textAlignment="center"
                                android:textSize="14sp"
                                android:textColor="@color/colorlabel" />



                            <androidx.appcompat.widget.AppCompatEditText
                                android:layout_width="match_parent"
                                android:padding="6dp"
                                android:inputType="textCapSentences|textMultiLine"
                                android:minLines="4"
                                android:gravity="top"
                                android:maxLength="1000"
                                android:id="@+id/order_details"
                                android:textSize="14sp"
                                android:layout_marginTop="@dimen/spacing_middle"
                                android:background="@drawable/et_background"
                                android:layout_height="wrap_content" />

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:id="@+id/b2b_linear">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="GST Number *"
                                android:textAlignment="center"
                                android:textSize="14sp"
                                android:textColor="@color/colorlabel" />



                            <androidx.appcompat.widget.AppCompatEditText
                                android:layout_width="match_parent"
                                android:padding="11dp"
                                android:maxLength="15"
                                android:maxLines="1"
                                android:id="@+id/gst_no"
                                android:inputType="textCapCharacters"
                                android:textSize="14sp"
                                android:hint="Enter your GST Number"
                                android:layout_marginTop="@dimen/spacing_middle"
                                android:background="@drawable/et_background"
                                android:layout_height="wrap_content" />



                            <LinearLayout
                                android:layout_width="match_parent"
                                android:orientation="horizontal"
                                android:layout_marginTop="10dp"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:id="@+id/upload_gst"
                                    android:layout_width="150dp"
                                    android:layout_height="55dp"
                                    android:elevation="5dp"
                                    android:gravity="center"
                                    android:background="@drawable/btn_rounded_primary"
                                    android:text="Upload Document *"
                                    android:textAllCaps="false"
                                    android:textColor="@android:color/white"
                                     />


                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textAlignment="center"
                                    android:textSize="14sp"
                                    android:layout_marginBottom="10dp"
                                    android:layout_marginLeft="10dp"
                                    android:id="@+id/tv_gst"
                                    android:textColor="@color/colorBlack" />


                            </LinearLayout>

                        </LinearLayout>
                        <View
                            android:layout_width="0dp"
                            android:layout_height="@dimen/spacing_small" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="PAN Number *"
                                android:textAlignment="center"
                                android:textSize="14sp"
                                android:textColor="@color/colorBlack" />



                            <androidx.appcompat.widget.AppCompatEditText
                                android:layout_width="match_parent"
                                android:padding="11dp"
                                android:maxLength="10"
                                android:maxLines="1"
                                android:id="@+id/pan_no"
                                android:inputType="textCapCharacters"
                                android:textSize="14sp"
                                android:hint="Enter your PAN Number"
                                android:layout_marginTop="@dimen/spacing_middle"
                                android:background="@drawable/et_background"
                                android:layout_height="wrap_content" />



                            <LinearLayout
                                android:layout_width="match_parent"
                                android:orientation="horizontal"
                                android:layout_marginTop="10dp"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:layout_width="150dp"
                                    android:layout_height="55dp"
                                    android:elevation="5dp"
                                    android:gravity="center"
                                    android:id="@+id/upload_pan1"
                                    android:background="@drawable/btn_rounded_primary"
                                    android:text="Upload Document *"
                                    android:textAllCaps="false"
                                    android:textColor="@android:color/white"
                                    />


                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textAlignment="center"
                                    android:textSize="14sp"
                                    android:id="@+id/tv_pan"
                                    android:layout_marginBottom="10dp"
                                    android:layout_marginLeft="10dp"
                                    android:textColor="@color/colorBlack" />


                            </LinearLayout>

                        </LinearLayout>

                        </LinearLayout>






                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Upload Sales Recording"
                                android:textAlignment="center"
                                android:textSize="14sp"
                                android:textColor="@color/colorBlack" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:orientation="horizontal"
                                android:layout_marginTop="10dp"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:id="@+id/upload_sales_recording"
                                    android:layout_width="150dp"
                                    android:layout_height="55dp"
                                    android:elevation="5dp"
                                    android:gravity="center"
                                    android:background="@drawable/btn_rounded_primary"
                                    android:text="Upload Recording"
                                    android:textAllCaps="false"
                                    android:textColor="@android:color/white"
                                     />


                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textAlignment="center"
                                    android:layout_marginBottom="10dp"
                                    android:layout_marginLeft="10dp"
                                    android:id="@+id/tv_sales_recording"
                                    android:textColor="@color/colorBlack" />


                            </LinearLayout>



                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Payment Details *"
                                android:textAlignment="center"
                                android:textSize="14sp"
                                android:textColor="@color/colorBlack" />



                            <androidx.appcompat.widget.AppCompatEditText
                                android:layout_width="match_parent"
                                android:padding="6dp"
                                android:inputType="textCapSentences|textMultiLine"
                                android:minLines="4"
                                android:gravity="top"
                                android:id="@+id/payment_details"
                                android:maxLength="1000"
                                android:textSize="14sp"
                                android:layout_marginTop="@dimen/spacing_middle"
                                android:background="@drawable/et_background"
                                android:layout_height="wrap_content" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Upload Application From *"
                                android:textAlignment="center"
                                android:textSize="14sp"
                                android:textColor="@color/colorBlack" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:orientation="horizontal"
                                android:layout_marginTop="10dp"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:id="@+id/upload_sales_image"
                                    android:layout_width="150dp"
                                    android:layout_height="55dp"
                                    android:elevation="5dp"
                                    android:gravity="center"
                                    android:background="@drawable/btn_rounded_primary"
                                    android:text="Upload"
                                    android:textAllCaps="false"
                                    android:textColor="@android:color/white"
                                    />


                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textAlignment="center"
                                    android:layout_marginBottom="10dp"
                                    android:layout_marginLeft="10dp"
                                    android:id="@+id/tv_sales_image"
                                    android:textColor="@color/colorBlack" />


                            </LinearLayout>



                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Upload Other Images *"
                                android:textAlignment="center"
                                android:textSize="14sp"
                                android:textColor="@color/colorBlack" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:orientation="horizontal"
                                android:layout_marginTop="10dp"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:id="@+id/upload_sales_imagess"
                                    android:layout_width="150dp"
                                    android:layout_height="55dp"
                                    android:elevation="5dp"
                                    android:gravity="center"
                                    android:background="@drawable/btn_rounded_primary"
                                    android:text="Upload"
                                    android:textAllCaps="false"
                                    android:textColor="@android:color/white"
                                    />


                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textAlignment="center"
                                    android:layout_marginBottom="10dp"
                                    android:layout_marginLeft="10dp"
                                    android:id="@+id/tv_sales_imagess"
                                    android:textColor="@color/colorBlack" />


                            </LinearLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Upload Cancel Check *"
                                android:textAlignment="center"
                                android:textSize="14sp"
                                android:textColor="@color/colorBlack" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:orientation="horizontal"
                                android:layout_marginTop="10dp"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:id="@+id/upload_sals_cancelchk"
                                    android:layout_width="150dp"
                                    android:layout_height="55dp"
                                    android:elevation="5dp"
                                    android:gravity="center"
                                    android:background="@drawable/btn_rounded_primary"
                                    android:text="Upload"
                                    android:textAllCaps="false"
                                    android:textColor="@android:color/white"
                                    />


                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textAlignment="center"
                                    android:layout_marginBottom="10dp"
                                    android:layout_marginLeft="10dp"
                                    android:id="@+id/tv_sales_cancelchk"
                                    android:textColor="@color/colorBlack" />


                            </LinearLayout>
                        </LinearLayout>
                            <View
                            android:layout_width="0dp"
                            android:layout_height="@dimen/spacing_xlarge" />

                        <TextView
                            android:id="@+id/kyc_submit"
                            android:layout_width="match_parent"
                            android:layout_height="55dp"
                            android:elevation="5dp"
                            android:gravity="center"
                            android:layout_marginLeft="-4dp"
                            android:layout_marginRight="-4dp"
                            android:background="@drawable/btn_rounded_primary"
                            android:text="Submit"
                            android:textAllCaps="false"
                            android:textColor="@android:color/white"
                             />
                        <View
                            android:layout_width="0dp"
                            android:layout_height="@dimen/spacing_xlarge" />

                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>