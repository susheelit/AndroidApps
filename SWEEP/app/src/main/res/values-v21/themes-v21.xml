    <style name="CustomDialogTheme">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>


    <style name="MyToolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="materialThemeOverlay">@style/MyThemeOverlay_Toolbar</item>
    </style>

    <style name="MyThemeOverlay_Toolbar" parent="">
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:homeAsUpIndicator">@drawable/abc_vector_test</item>
    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">@dimen/_15sdp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextViewStyle">
        <item name="android:textColor">@color/darkGrey</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:padding">@dimen/_2sdp</item>
    </style>

    <style name="verView">
        <item name="android:layout_width">0.2dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginBottom">@dimen/_3sdp</item>
        <item name="android:background">@color/grey</item>
    </style>

    <style name="horView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.2dp</item>
        <item name="android:background">@color/grey</item>
    </style>

     <style name="elevation">
         <item name="elevation">@dimen/_4sdp</item>
